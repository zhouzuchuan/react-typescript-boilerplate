{
    "name": "react-typescript-boilerplate",
    "version": "1.3.0",
    "private": true,
    "group": "zhouzuchuan",
    "description": "React typescript boilerplate based on secondary development of create-react-app",
    "author": {
        "name": "fezzc",
        "email": "zhouzuchuan@sina.com"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "api-manage": "^2.3.0",
        "axios": "^0.21.1",
        "classnames": "^2.2.6",
        "connected-react-router": "6.8.0",
        "css.preset": "^0.0.6",
        "immer": "^8.0.1",
        "less-loader": "7.3.0",
        "lodash": "^4.17.21",
        "normalize.css": "^8.0.1",
        "notistack": "^1.0.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-enhanced": "^3.0.1",
        "react-i18next": "^11.8.7",
        "react-redux": "^7.2.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.2",
        "styled-components": "^5.2.1",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start": "react-app-rewired start",
        "build": "react-app-rewired build",
        "test": "react-app-rewired test",
        "eject": "react-scripts eject",
        "analyze": "cross-env source_map=true react-app-rewired build &&  source-map-explorer 'build/static/js/*.js'",
        "styleguide": "styleguidist server",
        "styleguide:build": "styleguidist build",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages",
        "lint:css": "stylelint 'src/**/*.tsx'",
        "lint:js": "eslint 'src/**/*.tsx' 'src/**/*.ts' 'src/**/*.js'",
        "lint": "npm run lint:js && npm run lint:css",
        "commit": "git-cz",
        "release": "standard-version"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-customizable"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "@typescript-eslint/no-unused-expressions": [
                "off"
            ],
            "import/no-anonymous-default-export": [
                1,
                {
                    "allowObject": true,
                    "allowArray": true,
                    "allowLiteral": true
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.12.13",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@hot-loader/react-dom": "^17.0.1",
        "@storybook/addon-actions": "^6.1.18",
        "@storybook/addon-docs": "^6.1.18",
        "@storybook/addon-links": "^6.1.18",
        "@storybook/react": "^6.1.18",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/classnames": "^2.2.11",
        "@types/jest": "^26.0.15",
        "@types/lodash": "^4.14.168",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-redux": "^7.1.16",
        "@types/react-router-dom": "^5.1.7",
        "@types/styled-components": "^5.1.7",
        "babel-plugin-import": "^1.13.3",
        "commitizen": "^4.2.3",
        "cross-env": "^7.0.3",
        "customize-cra": "^1.0.0",
        "cz-customizable": "^6.3.0",
        "data-mock": "^2.1.0",
        "html-webpack-comment-plugin": "^0.0.2",
        "husky": "^4.3.8",
        "less": "^4.1.1",
        "lint-staged": "^10.5.4",
        "lodash-webpack-plugin": "^0.11.6",
        "prettier": "^2.2.1",
        "react-app-rewired": "^2.1.8",
        "react-docgen-typescript": "^1.21.0",
        "react-hot-loader": "^4.13.0",
        "react-styleguidist": "^11.1.5",
        "source-map-explorer": "^2.5.2",
        "standard-version": "^9.1.1",
        "stylelint": "^13.11.0",
        "stylelint-config-recess-order": "^2.3.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-webpack-plugin": "^2.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,less,css,json}": [
            "prettier --write",
            "npm run lint",
            "git add ."
        ]
    }
}
